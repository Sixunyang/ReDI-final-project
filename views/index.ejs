      }
      .select .popular {
        width: 1.2rem;
        height: 0.4rem;
        border: 0.01rem solid #e8e8e8;
        text-align: center;
        line-height: 0.4rem;
        cursor: pointer;
      }
      .select .popular-latest {
        position: absolute;
        top: 0.5rem;
        width: 1.9rem;
        height: 0.9rem;
        border: 0.01rem solid #e8e8e8;
        background-color: white;
        display: none;
        flex-direction: column;
      }
      .select .show {
        display: flex;
      }
      .select .popular-latest div {
        cursor: pointer;

        height: 0.45rem;
        line-height: 0.45rem;
        padding-left: 0.24rem;
      }
