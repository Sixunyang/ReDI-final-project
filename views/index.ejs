      /* Start Set Up */
      * {
        margin: 0;
        padding: 0;
        list-style: none;
        box-sizing: border-box;
      }
      a {
        text-decoration: none;
        color: black;
        transition: all 0.2s;
      }
      html {
        font-size: 100px;
      }
      body {
        font-size: 0.14rem;
        font-family: "Poppins", sans-serif;
      }

      /* End Set Up */

      /* Start Header */
      header {
        position: fixed;
        top: 0;
        width: 100%;
        /*  height: 1.05rem; */
        height: 0.9rem;
        background-color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 0.7rem 0 0.7rem;
        z-index: 999;
      }
      header img {
        width: 2.7rem;
      }

      header nav {
        display: flex;
        gap: 0.1rem;
      }
      header nav a,
      header .user a,
      footer .donate a {
        border: 0.01rem solid white;
        padding: 0.08rem 0.18rem;
        border-radius: 0.25rem;
      }
      header nav a:hover {
        border-color: #6cabc1;
        background-color: #6cabc1;
        color: white;
      }
      header .user a,
      footer .donate a {
        border-color: #f15a22;
        background-color: #f15a22;
        color: white;
      }

      header .burger-menu {
        display: none;
        cursor: pointer;
      }
      header .burger {
        width: 60%;

        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      header .close {
        display: none;
      }

      /* End Header */

      /* Start Intro Section */
      .intro {
        position: relative;
        width: 100%;
        height: 100vh;
        background-color: pink;
        background: url(./imgs/IMG_7684.JPG);
        background-size: cover;
      }
      .intro::after {
        content: " ";
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        position: absolute;
        z-index: 9;
      }
      .intro .ad {
        position: absolute;
        top: 40%;
        padding: 0 20% 0 20%;
        width: 100%;

        color: white;
        z-index: 99;
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
      }
      .intro .ad h1 {
        font-size: 0.4rem;
      }
      .intro .ad h6 {
        font-size: 0.25rem;
        font-weight: 400;
      }
      .intro .ad p {
        font-size: 0.15rem;
      }
      .intro .ad .input {
        display: flex;
      }
      .intro .ad .input input {
        outline: none;
        width: 100%;
        height: 0.5rem;
        border: none;
        font-size: larger;
        border-radius: 0 0.05rem 0.05rem 0;
      }
      .intro .ad .input .search-logo {
        width: 0.5rem;
        height: 0.5rem;
        color: #767676;
        background-color: white;
        text-align: center;
        line-height: 0.5rem;
        font-size: larger;
        border-radius: 0.05rem 0 0 0.05rem;
      }
      .intro .ad a {
        color: #c9c5c5;
      }
      .intro .ad a:hover {
        color: white;
      }
      /* End Intro Section */

      /* Start Select Part */
